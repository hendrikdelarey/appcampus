<UserControl x:Class="TextWidget.CenteredTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
			 x:Name="TextWidget"
             d:DesignHeight="300" d:DesignWidth="300">
	<Viewbox Stretch="Uniform">
    <Grid Height="836" Width="1920">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="77*"/>
    		<ColumnDefinition Width="883*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="469*"/>
    		<RowDefinition Height="367*"/>
    	</Grid.RowDefinitions>
		<TextBox Height="736" TextWrapping="Wrap" Foreground="{Binding TextColour}" Text="{Binding Text}" Margin="50" Width="1820" FontFamily="Calibri" FontSize="{Binding FontSize}" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}" Grid.RowSpan="2" Grid.ColumnSpan="2" BorderThickness="0" />
    </Grid>
	</Viewbox>
</UserControl>
